<?xml version="1.0" encoding="UTF-8"?>
<FitControl>
    <!-- settings for fit process -->


    <!-- set number of used algorithms -->
    <NumberOfFitAlgorithms>3</NumberOfFitAlgorithms>

   <algorithm>
         <FitAlgorithm>Genetic</FitAlgorithm>


        <!-- use new ranges: yes (default), no -->
        <UseNewRange>no</UseNewRange> <!-- yes produces a worse fit at
	the LM stage -->

	<BestSiteCounter>1</BestSiteCounter>
	
	<NumberChromosomes>automatic</NumberChromosomes>
	
        <!-- Set max. number of iterations -->
        <number_iterations>50</number_iterations>

        <!-- set max. number of processors -->
        <NumberProcessors>2</NumberProcessors>


        <!-- set path and name of host file -->
        <MPIHostFileName> </MPIHostFileName>


        <!-- settings for chi^2 -->
        <limit_of_chi2>1e-8</limit_of_chi2> <!-- 1e-67 -->
        <RenormalizedChi2>yes</RenormalizedChi2>
        <DeterminationChi2>default</DeterminationChi2>
        <SaveChi2>yes</SaveChi2>


        <!-- set plot options -->
        <PlotAxisX>Rest Frequency [MHz]</PlotAxisX>
        <PlotAxisY>T_mb [K]</PlotAxisY>
        <PlotIteration>yes</PlotIteration>
    </algorithm>



    <!-- define settings for 2nd algorithm -->
    <algorithm>
        <FitAlgorithm>Levenberg-Marquardt</FitAlgorithm>


        <!-- define value of the variation (used for the calculation of the gradient (first derivative of chi^2 function)) in percent/100 -->
        <VariationValue>1.e-4</VariationValue> <!-- default -->


        <!-- set max. number of iterations -->
        <number_iterations>50</number_iterations>


        <!-- set max. number of processors -->
        <NumberProcessors>2</NumberProcessors>


        <!-- settings for chi^2 -->
        <limit_of_chi2>1e-8</limit_of_chi2>
        <RenormalizedChi2>yes</RenormalizedChi2>
        <DeterminationChi2>default</DeterminationChi2>
        <SaveChi2>yes</SaveChi2>


        <!-- set plot options -->
        <PlotAxisX>Rest Frequency [MHz]</PlotAxisX>
        <PlotAxisY>T_mb [K]</PlotAxisY>
        <PlotIteration>yes</PlotIteration>
</algorithm>

<!-- define settings for 3rd algorithm -->
<algorithm>
	<FitAlgorithm>errorestim_ins</FitAlgorithm>
	<ErrorMethod>INS</ErrorMethod>

	<!-- define value of variation (not relevant for INS) -->
	<VariationValue>1.e-2</VariationValue>

	<!-- set max. no of iterations -->
	<number_iterations>8</number_iterations>

	<!-- set max. no of processors -->
	<NumberProcessors>2</NumberProcessors>

	<!-- setting for chi^2 -->
	<limit_of_chi2>1e-8</limit_of_chi2>
	<RenormalizedChi2>yes</RenormalizedChi2>
	<DeterminationChi2>default</DeterminationChi2>
	<SaveChi2>yes</SaveChi2>

	<!-- set plot options -->
	<PlotAxisX>Rest Frequency [MHz]</PlotAxisX>
	<PlotAxisY>T_mb [K]</PlotAxisY>
	<PlotIteration>yes</PlotIteration>
</algorithm>
	
</FitControl>

